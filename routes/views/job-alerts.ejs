        </nav>
    </header>
    <main>
        <section id="job-alerts">
            <h2 class="section-heading">Set Job Alerts</h2>
            <form id="jobAlertForm">
                <label for="alertKeyword">Job Keyword:</label>
                <input type="text" id="alertKeyword" placeholder="e.g., Software Engineer" required>

                <label for="alertLocation">Location:</label>
                <input type="text" id="alertLocation" placeholder="e.g., Mumbai" required>

                <label for="alertEmail">Email Address:</label>
                <input type="email" id="alertEmail" placeholder="e.g., example@mail.com" required>

                <button type="button" onclick="setJobAlert()">Set Alert</button>
            </form>
            <div style="margin-top: 20px;">
                <a href="/cover-letter" class="welcome-button">Previous: Cover Letter</a>
                <a href="/job-matching" class="welcome-button">Next: Job Search</a>
            </div>
        </section>
    </main>
